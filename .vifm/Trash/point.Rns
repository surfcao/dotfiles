\begin{frame}
\frametitle{Simple Descriptive Statistics}
\bblock{Mean center of a point pattern:}
\begin{itemize}
\item point with coordinates $\bar{s} = (\bar{x}, \bar{y})$:
\begin{equation*}
\bar{x}=\frac{1}{n} \sum\limits_{i=1}^{n} x_i \qquad {and} \qquad \bar{y}=\frac{1}{n} \sum\limits_{i=1}^{n} y_i
\end{equation*}
\item center of point pattern, or point with average $x$ and $y$-coordinates
\end{itemize}
\eblock

\bblock{Standard distance of a point pattern:}
\begin{itemize}
\item average squared deviations of $x$ and $y$ coordinates from their respective mean:
\begin{equation*}
d_{std} = \sqrt{\frac{\sum_{i=1}^{n}(x_i-\bar{x})^2+\sum_{i=1}^{n}(y_i-\bar{y})^2}{n-1}}
\end{equation*}

\item related to standard deviation of coordinates
\end{itemize}
\eblock

\end{frame}
